{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "skipLibCheck": true,
        "types": ["@webgpu/types"],
        "strict": true,
        // "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "removeComments": true,
        "stripInternal": true,
        "noEmitOnError": true
    },
    "include": ["gpu.ts"]
}
